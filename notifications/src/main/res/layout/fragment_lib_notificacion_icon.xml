<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_icono_notificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_icono_notificacion"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/sobre_blanco"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_numero_notificaciones"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:visibility="invisible"
            android:background="@drawable/circulo_rojo"
            android:gravity="center"
            android:elevation="4dp"
            android:text="2"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_icono_notificacion" />



        <Button
            android:id="@+id/btn_notificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:elevation="10dp" />


    </android.support.constraint.ConstraintLayout>
</layout>